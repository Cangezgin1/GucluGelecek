@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Ekleme Sayfası</h1>

@using (Html.BeginForm("CategoryAdd", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.CategoryID, new { @class = "form-control" })
        <br />
        <p>Kategori Adı:</p>
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Kategori Ekle</button>
    </div>
}
