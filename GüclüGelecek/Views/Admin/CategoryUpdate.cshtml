@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Güncelleme Sayfası</h1>

@using (Html.BeginForm("CategoryUpdate", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.CategoryID, new { @class = "form-control" })
        @Html.Label("İsim:")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Değişiklikleri Kaydet</button>
    </div>
}