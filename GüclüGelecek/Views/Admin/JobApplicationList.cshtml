@using EntityLayer.Concrete
@model List<JobApplication>

@{
    ViewData["Title"] = "JobAplicationList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h1>İş Başvuru Listesi</h1>

<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başvuran</th>
        <th>Başvurulan İş</th>
        <th>Tarih</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.JobApplicationID</th>
            <td>@item.JobSeeker.Name</td>
            <td>@item.Job.JobTitle</td>
            <td>@item.ApplicationDate</td>
        </tr>
    }
</table>
