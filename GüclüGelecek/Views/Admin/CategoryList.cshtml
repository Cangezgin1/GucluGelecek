@using EntityLayer.Concrete
@model List<Category>


@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h1 style="font-weight:bold;">Kategori Listesi</h1>

<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori İsmi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <th><a href="/Admin/CategoryDelete/@item.CategoryID" class="btn btn-danger">Sil</a></th>
            <th><a href="/Admin/CategoryUpdate/@item.CategoryID" class="btn btn-warning">Güncelle</a></th>
        </tr>
    }
</table>
<a href="/Admin/CategoryAdd/" class="btn btn-success">Kategori Ekle</a>
