@using EntityLayer.Concrete
@model List<JobApplication>

@{
    ViewData["Title"] = "Job Application List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Job Application List</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başuranın Adı</th>
        <th>Mail Adresi</th>
        <th>Başvuru Tarihi</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.JobSeeker.JobSeekerID</th>
            <td>@item.JobSeeker.Name @item.JobSeeker.Surname</td>
            <td>@item.JobSeeker.Email</td>
            <td>@item.ApplicationDate</td>
        </tr>
    }
</table>